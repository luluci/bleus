<Window x:Class="bleus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bleus"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
        Title="MainWindow" Height="356" Width="597" Loaded="Window_Loaded">
    <Window.Resources>

        <Style TargetType="{x:Type ListBox}" x:Key="ListBoxStyle_BLEDevices" BasedOn="{StaticResource {x:Type ListBox}}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding LocalName.Value}" FontWeight="Bold" Margin="0,0,10,0" />
                                <Button Grid.Column="1" Width="50" Content="Test" />
                            </Grid>
                            <WrapPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding DeviceId.Value}"/>
                            </WrapPanel>
                            <WrapPanel Orientation="Horizontal">
                                <TextBlock>
                                    <TextBlock.Inlines>
                                        <Run Text="{Binding RawSignalStrengthInDBm.Value}"/>
                                        <Run Text="dBm"/>
                                    </TextBlock.Inlines>
                                </TextBlock>
                            </WrapPanel>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" Background="DarkGray" />

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="10,5,10,5">
                <Button Padding="3" Command="{Binding OnScan}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsScanning.Value}" Value="true">
                                    <Setter Property="Content" Value="Scan Stop" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsScanning.Value}" Value="false">
                                    <Setter Property="Content" Value="Scan Start" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="1">
            <ListBox Margin="10,5,10,5" Style="{StaticResource ListBoxStyle_BLEDevices}" ItemsSource="{Binding Devices}"></ListBox>
        </Grid>

        <Grid Grid.Row="3">

            <Label Content="device info" Width="100"/>
        </Grid>
    </Grid>
</Window>
