<Window x:Class="bleus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bleus"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
        Title="MainWindow" Height="356" Width="597" Loaded="Window_Loaded">
    <Window.Resources>

        <Style TargetType="{x:Type ListBox}" x:Key="ListBoxStyle_BLEDevices" BasedOn="{StaticResource {x:Type ListBox}}">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <CheckBox VerticalContentAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding LocalName.Value}"/>
                                        <TextBlock Text="{Binding DeviceId.Value}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock>
                                            <TextBlock.Inlines>
                                                <Run Text="{Binding RawSignalStrengthInDBm.Value}"/><Run Text="dBm"/>
                                            </TextBlock.Inlines>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200*"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" Background="DarkGray" />

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="10,5,10,5">
                <Button Padding="3" Command="{Binding OnScan}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsScanning.Value}" Value="true">
                                    <Setter Property="Content" Value="Scan Stop" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsScanning.Value}" Value="false">
                                    <Setter Property="Content" Value="Scan Start" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="1">
            <ListBox Margin="10,5,10,5" Style="{StaticResource ListBoxStyle_BLEDevices}" ItemsSource="{Binding Devices}"></ListBox>
        </Grid>

        <Grid Grid.Row="3">
            <Label Content="device info"/>
        </Grid>
    </Grid>
</Window>
